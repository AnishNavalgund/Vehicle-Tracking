FROM python:3.10-slim

RUN apt-get update && apt-get install -y \
    git \
    libgl1 \
    libglib2.0-0 \
    && rm -rf /var/lib/apt/lists/*

RUN pip install --no-cache-dir \
    torch \
    torchvision \
    ultralytics \
    gradio

COPY . /app
WORKDIR /app

EXPOSE 7860

# Run the Gradio app
CMD ["python", "app.py"]
